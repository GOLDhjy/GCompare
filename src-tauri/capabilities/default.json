{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "fs:default",
    "fs:allow-applog-write",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "C:/**"
        },
        {
          "path": "D:/**"
        },
        {
          "path": "E:/**"
        },
        {
          "path": "F:/**"
        },
        {
          "path": "G:/**"
        },
        {
          "path": "H:/**"
        },
        {
          "path": "/Volumes/**"
        }
      ]
    }
  ]
}
