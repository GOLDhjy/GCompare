{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "fs:default",
    "fs:allow-applog-write",
    "fs:allow-read",
    "store:default",
    "store:allow-load",
    "store:allow-save",
    "store:allow-get",
    "store:allow-set",
    "store:allow-delete",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "$TEMP/**"
        },
        {
          "path": "C:/**"
        },
        {
          "path": "D:/**"
        },
        {
          "path": "E:/**"
        },
        {
          "path": "F:/**"
        },
        {
          "path": "G:/**"
        },
        {
          "path": "H:/**"
        },
        {
          "path": "/Volumes/**"
        },
        {
          "path": "**"
        }
      ]
    }
  ]
}
