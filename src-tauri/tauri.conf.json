{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GCompare",
  "version": "0.1.5",
  "identifier": "com.gcompare.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/GOLDhjy/GCompare/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJEOUEyQ0M3Mzk3MEYwMkMKUldRczhIQTV4eXlhTFJwUmYwSDJnWm1CS0x2WDdqTnNmdmxMVFRrUWZ4cmlnNElaUWJoSVJGWmsK"
    }
  },
  "app": {
    "windows": [
      {
        "title": "GCompare",
        "hiddenTitle": false,
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "bundleName": "GCompare"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      },
      "nsis": {
        "installMode": "currentUser",
        "displayLanguageSelector": false,
        "installerHooks": "nsis-hooks.nsh"
      }
    },
    "fileAssociations": [
      {
        "ext": [
          "txt",
          "md",
          "markdown",
          "json",
          "diff",
          "patch",
          "log",
          "yaml",
          "yml",
          "toml",
          "ini",
          "cfg",
          "conf",
          "csv",
          "ts",
          "tsx",
          "js",
          "jsx",
          "rs",
          "go",
          "py",
          "java",
          "c",
          "cpp",
          "h",
          "hpp",
          "rb",
          "php",
          "sql",
          "sh",
          "bash",
          "zsh",
          "ps1",
          "bat",
          "cmd",
          "xml",
          "html",
          "css",
          "scss",
          "less"
        ],
        "name": "GCompare Text",
        "description": "GCompare text file",
        "role": "Editor",
        "mimeType": "text/plain"
      }
    ]
  }
}
